{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/*"
, "public"  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "copyFiles": {
    "include": [
      "src/public/*"
    ],
    "exclude": [
      "**/*.ts"
    ],
    "flatten": false
  }
}